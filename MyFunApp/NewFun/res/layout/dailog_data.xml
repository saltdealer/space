<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="bottom" 
    android:orientation="vertical" 
    android:background="@drawable/nothing" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    
     <LinearLayout android:orientation="vertical" 
         android:background="@drawable/black_73" 
         android:id="@+id/datapick_cancel_linear" 
         android:layout_width="fill_parent" 
         android:layout_height="0.0dip" 
         android:layout_weight="1.0" />

     <LinearLayout
         android:id="@+id/reg_info_photo_linear"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:background="@color/white"
         android:orientation="vertical" >
         
        <LinearLayout 
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center_horizontal" android:paddingLeft="12dp"
		android:paddingRight="12dp" android:paddingTop="10dp" android:id="@+id/timePicker1">

		<com.MyFunApp.NewFun.View.WheelView
			android:id="@+id/year" android:layout_height="wrap_content"
			android:layout_width="125dip" 
			android:layout_weight="1.0"/>
		<com.MyFunApp.NewFun.View.WheelView
			android:id="@+id/month" android:layout_height="wrap_content"
			android:layout_width="90dip"
			android:layout_weight="1.0" />
		<com.MyFunApp.NewFun.View.WheelView
			android:id="@+id/day" android:layout_height="wrap_content"
			android:layout_width="90dip"
			 android:layout_weight="1.0" />
		</LinearLayout>
	    <RelativeLayout  android:layout_width="fill_parent" android:layout_height="wrap_content">
	           <TextView android:textSize="16.0sp" 
		        android:id="@+id/reg_data_finish"
		        android:gravity="center" 
		        android:textColor="@color/white" 
		        android:layout_width="135dp"
		        android:layout_height="41dp"
		        android:layout_centerHorizontal="true"
		        android:background="@drawable/btn_login_btn"
		        android:text="@string/finish" />
        </RelativeLayout>
     </LinearLayout>
	
</LinearLayout>
